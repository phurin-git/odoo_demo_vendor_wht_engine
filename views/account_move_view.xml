<odoo>
    <record id="view_move_form_inherit_wht" model="ir.ui.view">
        <field name="name">account.move.form.wht</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Add Tab -->
            <xpath expr="//notebook" position="inside">
                <page string="Withholding Tax">
                    <group>
                        <field name="x_wht_rate"
                               attrs="{'invisible':[('move_type','!=','in_invoice')]}"/>

                        <field name="x_wht_amount" readonly="1"
                               attrs="{'invisible':[('move_type','!=','in_invoice')]}"/>

                        <field name="x_approval_state" readonly="1"
                               attrs="{'invisible':[('move_type','!=','in_invoice')]}"/>

                    </group>
                </page>
            </xpath>

            <!-- Add Buttons -->
            <xpath expr="//header" position="inside">
                <button name="action_send_for_approval"
                        type="object"
                        string="Send for Approval"
                        class="btn-primary"
                        attrs="{
                            'invisible': ['|',
                                ('move_type','!=','in_invoice'),
                                ('x_approval_state','!=','draft')
                            ]
                        }"/>

                <button name="action_approve"
                        type="object"
                        string="Approve"
                        class="btn-success"
                        groups="demo_vendor_engine.group_vendor_wht_manager"
                        attrs="{
                            'invisible': [
                                '|',
                                ('move_type','!=','in_invoice'),
                                ('x_is_approved','=',True)
                            ]
                        }"/>
            </xpath>

            <!-- Add WHT after amount total -->
            <xpath expr="//field[@name='invoice_payments_widget']" position="after">

                <field name="x_wht_rate"
                       attrs="{'readonly':[('state','!=','draft')],
                       'invisible': [('move_type','!=','in_invoice')]}"/>

                <field name="x_wht_amount" readonly="1"
                        attrs="{'invisible': [('move_type','!=','in_invoice')]}"/>

                <field name="x_is_approved"
                       widget="boolean_toggle"
                       readonly="1"
                        attrs="{'invisible': [('move_type','!=','in_invoice')]}"/>

            </xpath>

        </field>
    </record>

    <record id="action_vendor_bill_waiting" model="ir.actions.act_window">
        <field name="name">Vendor Bills - Waiting Approval</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('move_type','=','in_invoice'),('x_approval_state','=','waiting')]</field>
    </record>

    <menuitem id="menu_vendor_bill_waiting"
              name="Waiting Approval"
              parent="account.menu_finance"
              action="action_vendor_bill_waiting"
              groups="demo_vendor_engine.group_vendor_wht_manager"/>

</odoo>
